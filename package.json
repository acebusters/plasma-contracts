    "bn.js": "^4.11.8",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^4.0.0",
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-config-standard": "^11.0.0-beta.0",
